<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        android:layout_margin="@dimen/margin_8">

        <ImageView
            android:id="@+id/cover_playlist"
            android:layout_width="@dimen/margin_46"
            android:layout_height="@dimen/margin_46"
            android:src="@drawable/track_stub_big"
            android:background="?attr/colorSecondary"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_playlist"
            android:textSize="@dimen/text_size_14"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="?attr/colorOnSecondary"
            android:layout_marginTop="@dimen/margin_4"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/playlist_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count_tracks"
            android:textSize="@dimen/text_size_14"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="?attr/colorSecondaryVariant"
            android:layout_marginTop="@dimen/margin_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/zero_tracks"/>
    </LinearLayout>

</LinearLayout>