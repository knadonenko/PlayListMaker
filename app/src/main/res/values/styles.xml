<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_main" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/corner</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/text_color</item>
    </style>

    <style name="button_borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">@dimen/settings_btn_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/settings_btn_padding_vertical</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/grey</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="TextTrackView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/search_result_artist_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>